<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wine1"
        android:background="@drawable/wine_glass"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wine3"
        android:background="@drawable/wine_glass"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/wine1"
        android:layout_marginBottom="94dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wine2"
        android:background="@drawable/wine_glass"
        android:layout_alignTop="@+id/wine1"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wine4"
        android:background="@drawable/wine_glass"
        android:layout_alignTop="@+id/wine3"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Karen"
        android:id="@+id/textView"
        android:layout_below="@+id/wine1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jennifer"
        android:id="@+id/textView2"
        android:layout_marginRight="28dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/wine2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Katherine"
        android:id="@+id/textView3"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/wine4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="500dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/wine_bottle"
        android:scaleType="fitXY" />

</RelativeLayout>
